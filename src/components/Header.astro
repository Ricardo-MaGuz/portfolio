---
import ThemeSelector from "./ThemeSelector.astro";
---

<header
  class='fixed top-0 z-10 flex items-center justify-between w-full mx-auto pt-2 px-3'
>
  <img
    src='https://avatars.githubusercontent.com/u/45581996?s=96&v=4'
    alt='Ricardo MaGuz'
    class='rounded-full w-12 h-12'
  />
  <nav class='flex flex-row gap-x-10'>
    <a href='#about'>About</a>
    <a href='#experience'>Experience</a>
    <a href='#projects'>Projects</a>
    <ThemeSelector />
  </nav>
</header>

<style>
  header {
    animation: header-shadown 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  @keyframes header-shadown {
    to {
      @apply shadow-lg ring-1 backdrop-blur dark:bg-gray-800/90 bg-white/50 ring-white/10;
    }
  }
</style>
