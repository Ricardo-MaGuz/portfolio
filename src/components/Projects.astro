---
import { PROJECT_ITEMS } from "../data/data";
import SectionWrapper from "./SectionWrapper.astro";

import ProjectItem from "./ProjectItem.astro";
import LapTopIcon from "./icons/LapTopIcon.astro";
---

<SectionWrapper id='projects'>
  <h2 class='flex items-center mb-6 text-3xl font-semibold gap-x'>
    <LapTopIcon class='size-8' /> Projects
  </h2>
  {PROJECT_ITEMS.map((project) => <ProjectItem {...project} />)}
</SectionWrapper>
