---
interface Props {
  title: string;
  description: string;
  github: string | null;
  imgUrl: string;
  url: string;
  stack: any[];
}
const { title, description, github, imgUrl, url, stack } = Astro.props;
---

<article>
  <h3 class='text-2xl font-semibold mb-2'>{title}</h3>
  <p><span>{github}</span> <span>{url}</span></p>
  <p class='text-lg mb-4 text-pretty'>{description}</p>
  <ul>
    {
      stack.map((item) => (
        <li>
          <item.icon class='size-4' />
        </li>
      ))
    }
  </ul>
  <img
    src={imgUrl}
    alt=''
  />
</article>
